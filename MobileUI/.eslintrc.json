{
	"env": {
		"browser": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react-hooks/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},

	"rules": {
		"import/order": 0
	},
	"settings": {
		"import/resolver": {
			"typescript": {} // this loads <rootdir>/tsconfig.json to ESLint
		}
	},
	/* for lint-staged */
	"globals": {
		"__dirname": true
	}
}
